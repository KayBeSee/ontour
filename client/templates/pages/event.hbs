<section class="page view-event">

  <div class="row">
    <div class="medium-12 column">
      <h2>{{ model.title }}</h2>
    </div>
  </div>

  <div class="row" style="margin-top: 15px">
    <div class="medium-5 small-12 column">
      <img src="{{ model.mainImage }}" />
    </div>
    <div class="medium-7 small-12 column">
      <div class="row">
        <div class="medium-12 small-12 column">
          <h3>{{ model.readableDate }}</h3>
        </div>
      </div>
      <div class="row">
        {{#if model.userIsAttending }}
          <span class="btn-success btn-lg btn-block attend text-center" id="attend-{{model._id}}">Attending</span>
        {{ else }}
          <span class="btn-danger btn-lg btn-block notAttend text-center" id="attend-{{model._id}}">Attending</span>
        {{/if}}
      </div>
      <div class="row" style="padding-top: 15px;">
        <a class="btn-lg btn-primary btn-block text-center" href="{{ model.ticket_url }}" target="_blank">Buy Tickets</a>
      </div>
      <div class="row" style="padding-top: 15px;">
        <a class="btn-lg btn-primary btn-block text-center" href="{{ model._id }}/edit">Edit Event</a>
      </div>
    <div class="row">
      <div class="medium-12 small-12 column">
      <h2>Artist Information</h2>
        {{#each model.artists}}
        <b>Name:</b> {{ name }}  <br />
        <b>Facebook:</b> {{ facebook_page_url }} <br />
        <b>Website:</b> {{ website }}  <br />
        {{/each}}
      </div>
    </div>
    <div class="row">
      <div class="medium-7 small-12 column">
        <h2>Venue Information</h2>
        <b>Name:</b> {{ model.venue.name }}  <br />
        <b>City:</b> {{ model.venue.city }} <br />
        <b>Region:</b> {{ model.venue.region }}  <br />
      </div>
    </div>
  </div>


  <div data-hook="comments"></div>
  <form data-hook="comment-form">
    <fieldset data-hook="field-container">
    </fieldset>
    <div class="buttons">
      <button type="submit" class="button small" data-hook="submit">Submit</button>
    </div>
  </form>
</section>

