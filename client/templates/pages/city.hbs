<section class="page view-user">

  <div class="row">
    <div class="medium-1 column">
      <img src="{{ model.picture }}" class="img-rounded img-responsive"/>
    </div>
    <div class="medium-9 column">
      <h2><span>{{ model.name }}</span></h2>
    </div>
    <div class="col-md-2 text-right pull-right">
      <a class="button" href="/cities/{{model.name}}/edit">Edit Venue</a>
    </div>
  </div>
  <div class="row">
    {{#unless model._id }}
      Oops, it looks like we have no information on this city.<br />
      <a href="/city/new">Add Info!</a>
    {{/unless}}
    <div class="medium-12 column">
      {{ model.name }}, {{ model.state }}<br />
    </div>
  </div>

  <div data-hook="venuesTable"></div>
  <div data-hook="eventsTable"></div>
</section>
