<section class="page view-user">

  <div class="row">
    <div class="medium-1 column">
      <img src="{{ model.picture }}" class="img-rounded img-responsive"/>
    </div>
    <div class="medium-9 column">
      <h2><span>{{ model.name }}</span></h2>
    </div>
    <div class="col-md-2 text-right pull-right">
      <a class="button" href="/artists/{{model.name}}/edit">Edit Artist</a>
    </div>
  </div>
  <div class="row">
    {{#unless model._id }}
      Oops, it looks like we have no information on this artist.<br />
      <a href="/artist/new">Add Info!</a>
    {{/unless}}
    <div class="medium-12 column">
      {{ model.website }} <br />
      {{ model.facebook }} <br />
      {{ model.twitter }} <br />
      {{ model.location }} <br />
      {{ model.bio }}
    </div>
  </div>

  <div data-hook="eventsTable"></div>

</section>
