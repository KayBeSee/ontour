<section class="page view-user">

  <div class="row">
    <div class="medium-1 column">
      <img src="{{ model.picture }}" class="img-rounded img-responsive"/>
    </div>
    <div class="medium-9 column">
      <h2><span>{{ model.name }}</span></h2>
    </div>
    <div class="col-md-2 text-right pull-right">
      <a class="btn btn-default btn-md" href="/venues/{{model.name}}/edit">Edit Venue</a>
    </div>
  </div>
  <div class="row">
    {{#unless model._id }}
      Oops, it looks like we have no information on this venue.<br />
      <a href="/venue/new">Add Info!</a>
    {{/unless}}
    <div class="medium-12 column">
      {{ model.address }} <br />
      {{ model.city }}, {{ model.state }} {{model.zipcode}}<br />
      {{ model.phone }} <br />
      {{ model.bio }}
    </div>
  </div>

  <div data-hook="eventsTable"></div>

</section>
