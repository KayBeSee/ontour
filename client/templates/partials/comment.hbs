<div class="row">
  <div class="col-md-3">
    <div class="row">
      <div class="col-md-3">
        <img src="{{ model.author.picture }}" class="img-responsive" />
      </div>
      <div class="col-md-9">
        <a href="/users/{{ model.author._id }}">{{ model.author.name }}</a>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      {{ model.message }}
    </div>
    <div class="row">
      <small>Created on: {{ model.datetime }}, Score: {{ model.score }}.
        <a data-hook="upvote">Upvote</a> - <a data-hook="downvote">Downvote</a></small>
    </div>
  </div>

</div>